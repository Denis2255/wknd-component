<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Human component"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[human]">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <columns
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                    maximized="{Boolean}false">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <selectField
                                    granite:class="cq-dialog-dropdown-showhide"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldLabel="Select gender"
                                    emptyField="Make a choice"
                                    name="./gender">
                                <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        cq-dialog-dropdown-showhide-target=".showhidetargets"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <square
                                            jcr:primaryType="nt:unstructured"
                                            text="Male"
                                            value="male"/>
                                    <rectangle
                                            jcr:primaryType="nt:unstructured"
                                            text="Female"
                                            value="female"/>
                                </items>
                            </selectField>
                            <targetMale
                                    granite:class="showhidetargets"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        showhidetargetvalue="male"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <firstNameMale
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Enter the value"
                                            fieldLabel="First name"
                                            name="./firstNameMale"
                                            validation="text-validation-first-upper"/>
                                    <lastNameMale
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            required="{Boolean}true"
                                            emptyText="Enter last name"
                                            fieldLabel="Mr."
                                            name="./lastNameMale"
                                            validation="text-validation-first-upper"/>
                                </items>
                            </targetMale>
                            <targetFemale
                                    granite:class="showhidetargets"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        showhidetargetvalue="female"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <firstNameFemale
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Enter the value"
                                            fieldLabel="First name"
                                            name="./firstNameFemale"
                                            validation="text-validation-first-upper"/>
                                    <lastNameFemale
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            required="{Boolean}true"
                                            emptyText="Enter last name"
                                            fieldLabel="Mrs."
                                            name="./lastNameFemale"
                                            validation="text-validation-first-upper"/>
                                </items>
                            </targetFemale>
                            <ageHuman
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    emptyText="Enter the value"
                                    fieldLabel="Age"
                                    name="./age"
                                    validation="age-validation"/>
                        </items>
                    </column>

                </items>
            </columns>
        </items>
    </content>
</jcr:root>